# Environment Configuration for Stogie Backend
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration (for additional security if needed)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# CORS Configuration
# Comma-separated list of allowed origins for production
CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Database Configuration (if using direct connection)
DATABASE_URL=postgresql://user:password@host:port/database

# File Upload Configuration (if using custom storage)
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# External API Keys (for future integrations)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
UPLOADCARE_SECRET_KEY=your-uploadcare-secret-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for caching, if needed)
REDIS_URL=redis://localhost:6379

# Monitoring (for production)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
